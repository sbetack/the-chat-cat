<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @chatroom.name %>
</p>

<div data-behavior='messages'>
<!-- refactor the thing below to be in the controller or model -->
   <% @chatroom.messages.order(created_at: :desc).limit(100).reverse.each do |message| %>
    <%= render message %>
   <% end %>
</div>

<%= form_for [@chatroom, Message.new], remote: true do |f| %>
  <%= f.text_area :body, row: 1, class: 'form-control', autofocus: true%>
  <%= f.submit %>
<% end %>